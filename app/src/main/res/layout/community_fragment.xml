<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.rrhostel.custom.CustomBoldTextView
            android:id="@+id/tv_Community"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Community Information"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="18sp" />

        <com.rrhostel.custom.CustomBoldTextView
            android:id="@+id/tv_Community1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Community"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="Community Management Office"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <com.rrhostel.custom.CustomRegularTextView
            android:id="@+id/tv_Community3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Community1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="310 Gran Via, Irving, TX 75039 ,"
            android:textSize="14sp" />

        <com.rrhostel.custom.CustomRegularTextView
            android:id="@+id/tv_Community2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Community3"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Phone: (972) 599-0342"
            android:textSize="14sp" />


        <com.rrhostel.custom.CustomBoldTextView
            android:id="@+id/tv_Community4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Community2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="Community Amenities"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <com.rrhostel.custom.CustomRegularTextView
            android:id="@+id/tv_Community5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Community4"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Breatheasy smokefree community"
            android:textSize="14sp" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_plus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:gravity="end">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="-30dp"
                android:background="@drawable/round_btn_bluey"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:text="Events"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_add_my_album_listing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                app:backgroundTint="@color/blue"
                app:srcCompat="@drawable/ic_plus" />
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>