<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/NotificationCustomLayoutWidth"
    android:layout_height="@dimen/NotificationCustomLayoutHeight"
    android:clickable="true"
    android:visibility="visible">

    <ImageView
        android:id="@+id/iv_notification"
        android:layout_width="@dimen/NotificationCustomImgWidth"
        android:layout_height="@dimen/NotificationCustomImgHeight"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_notification_icon"
        tools:ignore="ContentDescription" />


    <com.rrhostel.custom.CustomRegularTextView
        android:id="@+id/tv_notification_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/bg_noti"
        android:padding="2dp"
        android:text=" 5 "
        android:textColor="@color/colorWhite"
        android:textSize="8sp"
        tools:ignore="HardcodedText" />




</RelativeLayout>


